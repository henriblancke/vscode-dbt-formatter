{
	"name": "vscode-dbt-formatter",
	"displayName": "dbt formatter",
	"description": "Formatter for jinja-flavored sql used with dbt.",
	"version": "1.0.0",
	"publisher": "henriblancke",
	"repository": {
		"type": "git",
		"url": "https://github.com/henriblancke/vscode-dbt-formatter"
	},
	"icon": "dbt-logo.png",
	"keywords": [
		"dbt",
		"DBT",
		"SQL",
		"sql",
		"jinja-sql",
		"Formatting"
	],
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Other"
	],
	"activationEvents": [
		"onLanguage:sql",
		"onLanguage:jinja-sql"
	],
	"contributes": {
		"languages": [
			{
				"id": "sql",
				"aliases": [
					"SQL",
					"sql"
				],
				"extensions": [
					"sql"
				]
			},
			{
				"id": "jinja-sql",
				"aliases": [
					"jinja-sql"
				],
				"extensions": [
					"sql"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "dbt-formatter configuration",
			"properties": {
				"dbt-formatter.dialect": {
					"type": "string",
					"default": "default",
					"description": "The sql dialect you want to use, currently only default is available"
				},
				"dbt-formatter.upper": {
					"type": "boolean",
					"default": true,
					"description": "Formats sql reserved words to be uppercase when set to true"
				},
				"dbt-formatter.camelCase": {
					"type": "boolean",
					"default": true,
					"description": "Allows column names to be camel cased when lowerWords is set to true"
				},
				"dbt-formatter.lowerWords": {
					"type": "boolean",
					"default": true,
					"description": "Lowercase all non-reserved words"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run compile",
		"vscode:publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"dbt-formatter": "^1.2.0"
	},
	"extensionDependencies": [
		"bastienboutonnet.vscode-dbt"
	]
}
